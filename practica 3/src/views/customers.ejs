<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://bootswatch.com/5/sketchy/bootstrap.min.css">
    <title>Lista de Jugadores</title>
</head>
<body>
   <nav class="navbar navbar-dark bg-dark">
    <a href="/" class="navbar-brand">
        <h1>Lista de Jugadores</h1>
    </a>
   </nav>

   <div class="container">
    <div class="row mt-5">
        <div class="col-md-7">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Nº</th>
                        <th>Nombre</th>
                        <th>Apellido</th>
                        <th>Numero</th>
                        <th>Posicion</th>
                        <th>Accion</th>
                    </tr>                
                </thead>
                <tbody>
                    <% if (data && data.length > 0) { %>
                        <% for (var i = 0; i < data.length; i++) { %>
                            <tr>
                                <td><%= i + 1 %></td>
                                <td><%= data[i].nombre %></td>
                                <td><%= data[i].apellidos %></td>
                                <td><%= data[i].numero %></td>
                                <td><%= data[i].posicion %></td>
                                <td>
                                    <a href="/delete/<%= data[i].id %>" class="btn btn-danger">Eliminar</a>
                                    <a href="/update/<%= data[i].id %>" class="btn btn-info">Editar</a>
                                </td>                               
                            </tr>
                        <% } %>
                    <% }  %>
                </tbody>
            </table>
        </div>
        <div class="col-md-5">
           <div class="card">
                <div class="card-body">
                    <form action="/add" method="post">
                        <div class="form-group mb-3">
                            <input type="text" name="nombre" class="form-control" placeholder="Nombre del jugador" required> 
                        </div>
                        <div class="form-group mb-3">
                            <input type="text" name="apellidos" class="form-control" placeholder="Apellido del jugador" required> 
                        </div>
                        <div class="form-group mb-3">
                            <input type="text" name="numero" class="form-control" placeholder="Número del jugador" required> 
                        </div>
                        <div class="form-group mb-3">
                            <input type="text" name="posicion" class="form-control" placeholder="Posición del jugador" required> 
                        </div>
                        <button type="submit" class="btn btn-primary">
                            Agregar Jugador
                        </button>
                    </form>
                </div>
           </div>
        </div>
    </div>
   </div>
</body>
</html>